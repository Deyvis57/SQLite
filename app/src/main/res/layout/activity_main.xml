<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.negrete.deyvis.sqlite.MainActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Codigo"
                android:id="@+id/eCodigo"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:id="@+id/eNombre"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad"
                android:id="@+id/eCantidad"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor"
                android:id="@+id/eValor"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INSERTAR PELUCHITO"
                android:id="@+id/bInsertar"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACTUALIZAR PELUCHITO"
                android:id="@+id/bActualizar"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUSCAR PELUCHITO"
                android:id="@+id/bBuscar"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ELIMINAR PELUCHITO"
                android:id="@+id/bEliminar"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOSTRAR INVENTARIO"
                android:id="@+id/bInventario"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REALIZAR VENTAS"
                android:id="@+id/bVentas"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GANANCIA TOTAL"
                android:id="@+id/bGanancia"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULTADO"
                android:id="@+id/resultado"/>






        </LinearLayout>



    </ScrollView>



</LinearLayout>


